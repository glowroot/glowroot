                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>vertx-3.x</id>
      <properties>
        <vertx.version>3.6.2</vertx.version>
        <netty.version>4.1.30.Final</netty.version>
      </properties>
      <dependencies>
        <dependency>
          <groupId>io.vertx</groupId>

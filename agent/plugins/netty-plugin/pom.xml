        </pluginManagement>
      </build>
    </profile>
    <profile>
      <id>vertx-2.x</id>
      <properties>
        <vertx.version>2.1.6</vertx.version>
        <netty.version>4.0.21.Final</netty.version>
      </properties>
      <dependencies>
        <dependency>
          <groupId>io.vertx</groupId>

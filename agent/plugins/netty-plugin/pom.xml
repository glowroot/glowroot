                <configuration>
                  <sources>
                    <source>src/test/netty-4.x/java</source>
                  </sources>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>netty-3.x</id>
      <properties>
        <netty.version>3.10.6.Final</netty.version>
        <netty.compile.version>4.0.0.Final</netty.compile.version>
      </properties>
      <dependencies>
